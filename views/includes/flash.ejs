<% if (success && success.length) {%>    
    <div class="alert alert-success alert-dismissible fade col-6 offset-3 show mt-4" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) {%>    
    <div class="alert alert-danger alert-dismissible fade col-6 offset-3 show mt-4" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>